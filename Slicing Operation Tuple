
numbers = (10, 20, 30, 40, 50, 60, 70, 80)

print("Slicing Operation Tuple:", numbers)

print("numbers[2:6]   =", numbers[2:6])
print("numbers[:4]    =", numbers[:4])
print("numbers[3:]    =", numbers[3:])
print("numbers[-3:]   =", numbers[-3:])
print("numbers[:-2]   =", numbers[:-2])
print("numbers[::2]   =", numbers[::2])
print("numbers[::-1]  =", numbers[::-1])
